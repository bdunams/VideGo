@model VideGo.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer Details</h2>

<h3>@Model.Name</h3>
<h4>Subcribed: @Model.IsSubscribedToNewsletter</h4>
@{ 
    if (Model.Birthdate != null)
    {
        <h4>Birthdate: @Model.Birthdate.Value.ToString("MM/dd/yyyy")</h4>
    }
}